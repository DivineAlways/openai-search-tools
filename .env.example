# OpenAI API Configuration
# Required: Your OpenAI API key
OPENAI_API_KEY=your_api_key_here

# Optional: Vector Store Configuration
# The default vector store ID for file search
VECTOR_STORE_ID=your_vector_store_id_here

# Optional: Default Search Settings
# Default search context size (low, medium, high)
DEFAULT_CONTEXT_SIZE=medium

# Optional: Default Location Settings
# Two-letter ISO country code
DEFAULT_COUNTRY=US
# State or region name
DEFAULT_REGION=
# City name
DEFAULT_CITY=

# Optional: Streamlit Configuration
# Set to true to enable wide mode by default in Streamlit
STREAMLIT_WIDE_MODE=true
# Set to false to disable the Streamlit hamburger menu
STREAMLIT_HIDE_MENU=true
# Custom page title for Streamlit apps
STREAMLIT_PAGE_TITLE=OpenAI Search Tools

# Optional: Debug Settings
# Set to true to enable debug mode
DEBUG=false 